<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/fondo3">

    <ImageView
        android:id="@+id/img_heroe_detalle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/txt_nombre_detalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del Héroe"
        android:textSize="29sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:fontFamily="@font/odibee_regular"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/txt_descripcion_detalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/odibee_regular"
        android:text="Descripción"
        android:textSize="24sp"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_volver"
        style="@style/BotonSinFondoMorado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="180dp"
        android:background="@drawable/bg_marvel2"
        android:fontFamily="@font/odibee_regular"
        android:textSize="26sp"
        android:layout_gravity="center_horizontal"
        android:text="Regresar"
        android:textColor="@android:color/white" />

</LinearLayout>
